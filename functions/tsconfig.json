{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts", "src/index.js"],
  "exclude": ["node_modules"]
}
